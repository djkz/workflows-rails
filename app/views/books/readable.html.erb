<h3> <%= @item.title %></h3>
<div data-controller="pages" data-pages-index="1" data-pages-max="<%= @item.pages.count %>">
  <p data-target="pages.page">
    <%= @item.pages.first.text %>
  </p>
  <br>
  <button data-action="pages#previous" data-target="pages.prev">Previous</button>
  <button data-action="pages#next" data-target="pages.next">Next</button>
</div>

<br />